<Page
    x:Class="CPCRemote.UI.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20">
            <controls:TextBlock Text="Theme" Style="{ThemeResource TitleTextBlockStyle}" />
            <controls:ComboBox x:Name="ThemeComboBox" Margin="0,8,0,0">
                <x:String>Light</x:String>
                <x:String>Dark</x:String>
                <x:String>System</x:String>
            </controls:ComboBox>

            <controls:TextBlock Text="Accent Color" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,20,0,0" />
            <muxc:ColorPicker x:Name="AccentColorPicker" Margin="0,8,0,0" />

            <controls:TextBlock Text="Behavior" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,20,0,0" />
            <controls:ToggleSwitch x:Name="ConfirmationsToggle" Header="Show confirmation dialogs" Margin="0,8,0,0" />
        </StackPanel>
    </Grid>
</Page>
