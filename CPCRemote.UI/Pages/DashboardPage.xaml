<Page
    x:Class="CPCRemote.UI.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CPCRemote.UI.Controls"
    xmlns:helpers="using:CPCRemote.UI.Helpers"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <!-- Card Style -->
        <Style x:Key="DashboardCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource GlassBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource GlassBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,16,16"/>
            <!-- Implicit Animations for smooth entry -->
            <Setter Property="animations:Implicit.ShowAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:TranslationAnimation Duration="0:0:0.6" From="0,20,0" To="0,0,0" />
                        <animations:OpacityAnimation Duration="0:0:0.6" From="0" To="1.0"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                <TextBlock Text="DASHBOARD" Style="{StaticResource HyperTitleTextBlockStyle}" FontSize="28"/>
                <ProgressRing x:Name="LoadingRing" IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="20" Height="20" VerticalAlignment="Center" Foreground="{ThemeResource VibrantMesh}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                <ComboBox ItemsSource="{x:Bind ViewModel.PollingIntervalOptions, Mode=OneWay}" 
                          SelectedValue="{x:Bind ViewModel.PollingIntervalSeconds, Mode=TwoWay}"
                          DisplayMemberPath="Display"
                          SelectedValuePath="Seconds"
                          Width="100" VerticalAlignment="Center"/>
                          
                <ToggleSwitch IsOn="{x:Bind ViewModel.IsPollingEnabled, Mode=TwoWay}" 
                              OffContent="Paused" OnContent="Live" 
                              VerticalAlignment="Center"/>
                              
                <Button Command="{x:Bind ViewModel.RefreshStatsCommand}" Style="{StaticResource AccentButtonStyle}" ToolTipService.ToolTip="Refresh Now">
                    <FontIcon Glyph="&#xE72C;"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/> <!-- Service Status -->
                     <RowDefinition Height="Auto"/> <!-- CPU -->
                     <RowDefinition Height="Auto"/> <!-- GPU -->
                     <RowDefinition Height="Auto"/> <!-- Memory + Mobo -->
                </Grid.RowDefinitions>

                <!-- Service Status Bar -->
                <Border Grid.Row="0" Style="{StaticResource DashboardCardStyle}" Margin="0,0,0,24" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                     <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Ellipse Grid.Column="0" Width="12" Height="12" Fill="{x:Bind ViewModel.IsServiceConnected, Mode=OneWay, Converter={StaticResource BoolToColorConverter}}" VerticalAlignment="Center" Margin="0,0,12,0"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind ViewModel.ServiceUptime, Mode=OneWay}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" Text="{x:Bind ViewModel.HttpListenerAddress, Mode=OneWay}" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                   VerticalAlignment="Center" FontSize="12" Opacity="0.6"/>
                    </Grid>
                </Border>

                <!-- CPU CARD -->
                <Border Grid.Row="1" Style="{StaticResource DashboardCardStyle}" helpers:CompositionBehavior.IsSpringAnimationEnabled="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="CPU" Style="{StaticResource TitleTextBlockStyle}" Foreground="{ThemeResource SystemAccentColor}"/>
                        
                        <!-- Gauges -->
                        <Grid Grid.Row="1" Margin="0,24,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Main Radial Gauge -->
                            <controls:AnimatedRadialGauge Grid.Column="0" 
                                                          Value="{x:Bind ViewModel.CpuUtility, Mode=OneWay, Converter={StaticResource NullableFloatToDoubleConverter}}" 
                                                          Maximum="100" Unit="%" 
                                                          Width="140" Height="140" Margin="0,0,32,0"/>
                                                          
                            <!-- Stats Grid -->
                            <Grid Grid.Column="1" VerticalAlignment="Center" ColumnSpacing="24" RowSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <controls:AnimatedLinearGauge Grid.Row="0" Grid.Column="0" Label="Temperature" Value="{x:Bind ViewModel.CpuTemp, Mode=OneWay, Converter={StaticResource NullableFloatToDoubleConverter}}" Maximum="100" Unit="°C" />
                                <controls:AnimatedLinearGauge Grid.Row="1" Grid.Column="0" Label="Package Power" Value="{x:Bind ViewModel.CpuPackagePower, Mode=OneWay, Converter={StaticResource NullableFloatToDoubleConverter}}" Maximum="200" Unit="W" />
                                
                                <controls:AnimatedLinearGauge Grid.Row="0" Grid.Column="1" Label="Effective Clock" Value="{x:Bind ViewModel.CpuEffectiveClock, Mode=OneWay, Converter={StaticResource NullableFloatToDoubleConverter}}" Maximum="6000" Unit="MHz" />
                                <controls:AnimatedLinearGauge Grid.Row="1" Grid.Column="1" Label="Core Clock" Value="{x:Bind ViewModel.CpuCoreClock, Mode=OneWay, Converter={StaticResource NullableFloatToDoubleConverter}}" Maximum="6000" Unit="MHz" />

                            </Grid>
                        </Grid>
                    </Grid>
                </Border>

                <!-- GPU CARD -->
                <Border Grid.Row="2" Style="{StaticResource DashboardCardStyle}" helpers:CompositionBehavior.IsSpringAnimationEnabled="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="GPU" Style="{StaticResource TitleTextBlockStyle}" Foreground="{ThemeResource SystemAccentColor}"/>
                        
                        <Grid Grid.Row="1" Margin="0,24,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Main Radial Gauge -->
                            <controls:AnimatedRadialGauge Grid.Column="0" 
                                                          Value="{x:Bind ViewModel.GpuCoreLoad, Mode=OneWay, Converter={StaticResource NullableFloatToDoubleConverter}}" 
                                                          Maximum="100" Unit="%" 
                                                          Width="140" Height="140" Margin="0,0,32,0"/>
                                                          
                             <!-- Stats Grid -->
                            <Grid Grid.Column="1" VerticalAlignment="Center" ColumnSpacing="24" RowSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <controls:AnimatedLinearGauge Grid.Row="0" Grid.Column="0" Label="Temperature" Value="{x:Bind ViewModel.GpuTemp, Mode=OneWay, Converter={StaticResource NullableFloatToDoubleConverter}}" Maximum="100" Unit="°C" />
                                <controls:AnimatedLinearGauge Grid.Row="1" Grid.Column="0" Label="Power" Value="{x:Bind ViewModel.GpuPower, Mode=OneWay, Converter={StaticResource NullableFloatToDoubleConverter}}" Maximum="400" Unit="W" />
                                
                                <controls:AnimatedLinearGauge Grid.Row="0" Grid.Column="1" Label="Core Clock" Value="{x:Bind ViewModel.GpuClock, Mode=OneWay, Converter={StaticResource NullableFloatToDoubleConverter}}" Maximum="3000" Unit="MHz" />
                                <controls:AnimatedLinearGauge Grid.Row="1" Grid.Column="1" Label="VRAM Usage" Value="{x:Bind ViewModel.GpuMemoryUsage, Mode=OneWay, Converter={StaticResource NullableFloatToDoubleConverter}}" Maximum="100" Unit="%" />

                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Memory & Mobo Split -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Memory -->
                    <Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}" helpers:CompositionBehavior.IsSpringAnimationEnabled="True">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Memory" Style="{StaticResource TitleTextBlockStyle}" Foreground="{ThemeResource SystemAccentColor}"/>
                            <controls:AnimatedRadialGauge HorizontalAlignment="Center"
                                                          Value="{x:Bind ViewModel.MemoryLoad, Mode=OneWay, Converter={StaticResource NullableFloatToDoubleConverter}}" 
                                                          Maximum="100" Unit="%" 
                                                          Width="100" Height="100" Margin="0,12"/>
                        </StackPanel>
                    </Border>
                    
                     <!-- Mobo -->
                    <Border Grid.Column="1" Style="{StaticResource DashboardCardStyle}" helpers:CompositionBehavior.IsSpringAnimationEnabled="True">
                         <StackPanel Spacing="12">
                            <TextBlock Text="Motherboard" Style="{StaticResource TitleTextBlockStyle}" Foreground="{ThemeResource SystemAccentColor}"/>
                            <Grid ColumnSpacing="12" RowSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                 <StackPanel Grid.Column="0">
                                    <TextBlock Text="Vcore" Opacity="0.5" FontSize="12"/>
                                    <TextBlock Text="{x:Bind ViewModel.Vcore, Mode=OneWay}" FontSize="20" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Vsoc" Opacity="0.5" FontSize="12"/>
                                    <TextBlock Text="{x:Bind ViewModel.Vsoc, Mode=OneWay}" FontSize="20" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </ScrollViewer>

        <!-- Status Footer -->
         <Border Grid.Row="2" Margin="0,12,0,0">
             <!-- Optional footer -->
        </Border>
    </Grid>
</Page>
