<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
        HYPER-DYNAMIC PALETTE 
        Neon/Pastel blends for a high-energy, modern aesthetic.
    -->

    <!-- Primary Gradient: Vibrant Mesh -->
    <!-- Used for key containers and accents -->
    <LinearGradientBrush x:Key="VibrantMesh" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF7F00FF" Offset="0.0"/>   <!-- Neon Purple -->
        <GradientStop Color="#FF00D4FF" Offset="0.5"/>   <!-- Cyan/Blue -->
        <GradientStop Color="#FF00FFAB" Offset="1.0"/>   <!-- Teal/Green -->
    </LinearGradientBrush>
    
    <!-- Secondary Gradient: Sunset Glitch -->
    <LinearGradientBrush x:Key="SunsetGlitch" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#FFFF0055" Offset="0.0"/>   <!-- Hot Pink -->
        <GradientStop Color="#FFFF9900" Offset="1.0"/>   <!-- Orange -->
    </LinearGradientBrush>

    <!-- Glass/Frost Effects -->
    <SolidColorBrush x:Key="GlassBorderBrush" Color="#33FFFFFF"/>
    <SolidColorBrush x:Key="GlassBackgroundBrush" Color="#15FFFFFF"/>
    
    <!-- 
        OVERRIDES FOR TRANSPARENCY 
        Critical for Mica/Acrylic backdrops to show through.
    -->
    
    <!-- Page Background: Transparent to see window backdrop -->
    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="Transparent"/>
    
    <!-- NavigationView Backgrounds -->
    <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="NavigationViewTopPaneBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="Transparent"/>

    <!-- Card Overrides for Dashboard (Glassy look) -->
    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#0FFFFFFF"/>
    <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="#20FFFFFF"/>

    <!-- Text Styles for Contrast -->
    <Style x:Key="HyperTitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="CharacterSpacing" Value="50"/>
    </Style>

    <!-- Toolbar Button Style: Subtle, for icon-only toolbar actions -->
    <Style x:Key="ToolbarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>

</ResourceDictionary>
